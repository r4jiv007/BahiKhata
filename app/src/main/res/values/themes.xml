<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="MyTheme"
        parent="Theme.Sherlock.Light">
        <item name="android:actionBarStyle">@style/MyActionBar</item>
        <item name="android:editTextStyle">@style/EditTextTheme</item>
        <item name="android:radioButtonStyle">@style/RadioButtonTheme</item>
    </style>

    <style name="MyActionBar"
        parent="Widget.Sherlock.ActionBar">
        <item name="android:background">@color/menu</item>
        <item name="android:titleTextStyle">@style/MyActionBarTitleText</item>
        <item name="android:displayOptions">showHome|homeAsUp|showTitle</item>
        <item name="android:icon">@android:color/transparent</item>
    </style>

    <style name="MyActionBarTitleText" parent="">
        <item name="android:textColor">@color/menu_text</item>
        <item name="android:textSize">@dimen/actionbar_text_size</item>
    </style>

    <style name="EditTextTheme"
        parent="android:TextAppearance.Holo.Widget.EditText">
        <item name="android:background">@drawable/apptheme_edit_text_holo_light</item>
    </style>
    <style name="RadioButtonTheme"
        parent="android:Widget.Holo.CompoundButton.RadioButton">
        <item name="android:color">@color/menu</item>

        </style>

</resources>